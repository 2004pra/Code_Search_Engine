      }
      @keyframes smoothPulse {
        0% {
          opacity: 0.4;
          transform: scale(0.9);
        }
        30% {
          opacity: 1;
          transform: scale(1);
        }
        70% {
          opacity: 1;
          transform: scale(1);
        }
        100% {
          opacity: 0.4;
